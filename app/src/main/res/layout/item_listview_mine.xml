<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/count_time_shap"
        android:id="@+id/mine_dingyue_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />
     <TextView
         android:id="@+id/name"
         android:text="不得姐体验馆"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="5dp"
         android:layout_toRightOf="@+id/mine_dingyue_icon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mine_dignyue"
        android:layout_toRightOf="@+id/mine_dingyue_icon"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="5dp"
        android:text="2073人订阅"/>
    <View
        android:layout_marginTop="1dp"
        android:id="@+id/view"
        android:layout_marginLeft="3dp"
        android:background="#220000"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@+id/mine_dignyue"
        android:layout_below="@+id/name"></View>
    <TextView

        android:id="@+id/mine_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@id/view"
        android:layout_marginLeft="5dp"
        android:text="总帖数275"
        android:textSize="10dp"/>

    <Button
        android:background="#10000000"
        android:textSize="10sp"
        android:text="+ 关注"
        android:textColor="#ff2200"
        android:layout_width="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="40dp" />

</RelativeLayout>
