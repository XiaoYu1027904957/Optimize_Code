<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoyu.rewritebaisi.app.ShowAnimationActivity">

    <ImageView
        android:id="@+id/edit_titlebar"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icon_post_copyright" />

    <LinearLayout
        android:id="@+id/linearLayout_Animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/video_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableTop="@drawable/send_video_uninstall"
            android:gravity="center"
            android:text="发视频" />

        <TextView
            android:id="@+id/picture_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/send_picture"
            android:gravity="center"
            android:text="发视频" />

        <TextView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableTop="@drawable/send_text"
            android:gravity="center"
            android:text="发视频" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_animation_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout_Animation"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/link_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:drawableTop="@drawable/send_link"
            android:gravity="center"
            android:text="发视频" />

        <TextView
            android:id="@+id/voice_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/send_voice"
            android:gravity="center"
            android:text="发视频" />
    </LinearLayout>

    <Button
        android:id="@+id/edit_show_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/translucent"
        android:text="取消" />
</RelativeLayout>
