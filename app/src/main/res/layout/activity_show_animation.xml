<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaoyu.rewritebaisi.app.ShowAnimationActivity">

    <ImageView
        android:id="@+id/edit_titlebar"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icon_post_copyright" />




        <TextView
            android:layout_marginTop="230dp"
            android:id="@+id/video_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableTop="@drawable/send_video_uninstall"
            android:gravity="center"
            android:text="发视频" />

        <TextView
            android:layout_marginTop="230dp"
            android:id="@+id/picture_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:drawableTop="@drawable/send_picture"
            android:gravity="center"
            android:text="发图片" />

        <TextView
            android:layout_marginTop="230dp"
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:drawableTop="@drawable/send_text"
            android:gravity="center"
            android:text="发段子" />


    <TextView
        android:layout_marginTop="310dp"
        android:id="@+id/voice_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:drawableTop="@drawable/send_voice"
        android:gravity="center"
        android:text="发声音" />

        <TextView
            android:layout_marginTop="310dp"
            android:id="@+id/link_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:drawableTop="@drawable/send_link"
            android:gravity="center"
            android:text="发链接" />




    <Button
        android:id="@+id/edit_show_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/translucent"
        android:text="取消" />
</RelativeLayout>
