<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaoyu.rewritebaisi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".app.LoginActivity" />
        <activity android:name=".app.ContentPrizeActivity" />
        <activity android:name=".app.RankActivity" />
        <activity android:name=".app.RandomActivity" />
        <activity android:name=".app.BaiJiaJieActivity" />
        <activity android:name=".detials.DetialActivity" />
        <activity android:name=".detials.DetialImageActivity" />
        <activity android:name=".detials.DetialTextActivity" />
        <activity android:name=".app.PhotoShow" />
        <activity android:name=".detials.DetialShowActivity"></activity>
    </application>

</manifest>